{
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "outDir": "./dist",
    "rootDir": ".",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "strictNullChecks": false
  },
  "exclude": ["node_modules", "dist"]
}
