{
  "name": "libraries",
  "description": "Mono-repos libraries for front-end applications.",
  "private": true,
  "scripts": {
    "clean": "lerna clean",
    "reset": "lerna clean && rm -rf packages/**/package-lock.json && rm -rf packages/**/**/package-lock.json && lerna bootstrap",
    "scaffold": "node ./config/tasks/scaffold.js",
    "publish:all": "lerna bootstrap && lerna run compile && lerna publish",
    "prettier": "prettier --write '*/**/**/**/*.{js,jsx,ts,tsx,css,json,md}'",
    "storybook": "cd storybook && npm run storybook"
  },
  "devDependencies": {
    "@zouloux/files": "^0.6.0",
    "app-root-path": "^3.0.0",
    "change-case": "^4.1.1",
    "colors": "^1.4.0",
    "debug": "^4.1.1",
    "husky": "^4.2.3",
    "inquirer": "^7.0.4",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "typescript": "^3.8.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*/**/**/**/*.{js,jsx,ts,tsx,css,json,md}": [
      "prettier --write"
    ]
  }
}
