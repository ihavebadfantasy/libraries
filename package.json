{
  "name": "libraries",
  "description": "Mono-repos libraries for front-end applications.",
  "private": true,
  "scripts": {
    "clean": "lerna clean",
    "scaffold": "node ./config/tasks/scaffold.js",
    "publish:all": "lerna bootstrap && lerna run compile && lerna publish",
    "prettier": "prettier --write '*/**/**/**/*.{js,jsx,ts,tsx,css,json,md}'"
  },
  "devDependencies": {
    "@zouloux/files": "^0.6.0",
    "app-root-path": "^3.0.0",
    "change-case": "^4.1.1",
    "colors": "^1.4.0",
    "debug": "^4.1.1",
    "husky": "^3.1.0",
    "inquirer": "^7.0.1",
    "lerna": "^3.20.2",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "typescript": "^3.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*/**/**/**/*.{js,jsx,ts,tsx,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
