{
  "name": "react-grid-layout-component",
  "version": "1.0.0",
  "description": "This component allow to display a simple fixed grid layout on front of your react app.",
  "scripts": {
    "dev": "yarn && parcel ./example/index.html --open",
    "build": "tsc --declaration",
    "clean": "rm -rf .cache && rm -rf dist && rm -rf node_modules && yarn",
    "prettier": "prettier --write '**/*.{tsx,ts,less,json}'"
  },
  "dependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.10.1"
  },
  "devDependencies": {
    "@types/node": "^12.7.8",
    "@types/react": "^16.9.3",
    "@types/react-dom": "^16.9.1",
    "husky": ">=1",
    "less": "^3.10.3",
    "lint-staged": ">=8",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.18.2",
    "typescript": "^3.5.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/willybrauner/react-grid-layout-component.git"
  },
  "keywords": [
    "react",
    "component"
  ],
  "author": "Willy Brauner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/willybrauner/react-grid-layout-component/issues"
  },
  "homepage": "https://github.com/willybrauner/react-grid-layout-component#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{tsx,ts,less,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
