{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "moduleResolution": "node",
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "es6", "scripthost"],
    "baseUrl": "../../../",
    "rootDir": "src",
    "outDir": "lib",
    "isolatedModules": false,
    "noEmitOnError": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "allowUnreachableCode": true
  },
  "include": ["src"]
}
